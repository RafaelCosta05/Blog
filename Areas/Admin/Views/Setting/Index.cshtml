            <div class="right-column">
                <div class="form-row-right">
                    <div class="form-group">
                          <img id="thumbnailPreview" src="@Thumbnail" class="img-chooseFile" />
                    </div>
                    <div class="form-group">
                    <label class="label-form">Thumbnail</label>
                        <div class="custom-file">
                            <input type="file" asp-for="Thumbnail" class="custom-file-input" id="picture" />
                            <label class="custom-file-label">Choose file</label>
                            <span asp-validation-for="Thumbnail" class="text-bg-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            </div>
                <div class="btn">
                    <button type="submit" class="submit-settings">Save</button>
                </div>
        </form>
    </div>
